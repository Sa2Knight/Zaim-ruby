<div id="user">
  <h1 class="title">基本情報</h1>
  <p v-if="isLoading">読み込み中...</p>
  <table class="table" v-else>
    <body>
      <tr>
        <th>入力回数</th>
        <td>{{ data.input_count }}</td>
      </tr>
      <tr>
        <th>総収入額</th>
        <td>{{ data.total_income }}</td>
      </tr>
      <tr>
        <th>総支出額</th>
        <td>{{ data.total_spending }}</td>
      </tr>
      <tr>
        <th>総財産</th>
        <td>{{ data.total_income - data.total_spending }}</td>
      </tr>
    </tbody>
  </table>
</div>
